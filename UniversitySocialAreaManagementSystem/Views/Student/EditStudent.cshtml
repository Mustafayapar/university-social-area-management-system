@model EntityLayer.Concrete.Student

@{
    ViewBag.Title = "EditStudent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Öğrenci Güncelle</h2>

@using (Html.BeginForm("EditStudent", "Student", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Öğrenci İD")
        @Html.TextBoxFor(x => x.studentid, new { @class = "form-control", @readonly = "readonly" })
       
        <br />
        @Html.Label("Öğrenci Adı")
        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.name)
        <br />
        @Html.Label("Öğrenci Soyadı")
        @Html.TextBoxFor(x => x.surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.surname)
        <br />
        @Html.Label("Öğrenci Numarası")
        @Html.TextBoxFor(x => x.student_number, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.student_number)
        <br />
        @Html.Label("Öğrenci Tc si")
        @Html.TextBoxFor(x => x.tc_number, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.tc_number)
        <br />
        @Html.Label("Öğrenci Email adresi")
        @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.email)
        <br />
        @Html.Label("Öğrenci Şifresi")
        @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.password)
        <br />
        @Html.Label("Öğrenci Bölüm")
         @Html.DropDownListFor(x => x.d_id, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.d_id)
        <br />

        <button class="btn btn-success">Güncelle</button>

    </div>
}
<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

