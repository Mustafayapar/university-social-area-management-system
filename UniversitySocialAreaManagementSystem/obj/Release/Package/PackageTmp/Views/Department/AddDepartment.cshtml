@model EntityLayer.Concrete.Department
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h1>Bölüm Ekleme İşlemi</h1>

<br />

@using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Bölüm id")
        @Html.TextBoxFor(x => x.d_id, new { @class = "form-control" ,@readonly="readonly"})

        <br />
        @Html.Label("Bölüm adı")
        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.name)


        <br />

        <button class="btn btn-info">Bölümü Ekle</button>

    </div>
}

<div>
    @Html.ActionLink(" Geri Dön", "Index")
</div>