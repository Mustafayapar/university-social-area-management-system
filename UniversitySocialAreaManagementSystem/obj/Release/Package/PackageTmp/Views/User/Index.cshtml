@model IEnumerable<EntityLayer.Concrete.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" ref="stylesheet" />
<br />
<h2>Kullanıcı Bilgileri</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th># </th>
        <th>Kullanıcı Adı </th>
        <th>Kullanıcı Soyadı</th>
        <th>Kullanıcı Şifresi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>

            <td><a href="/Admin/DeleteStudent/@item.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/EditStudent/@item.id" class="btn btn-success">Güncelle</a></td>


        </tr>
    }

</table>
<br />

<a href="/User/AddUser" class="btn btn-info">Kullanıcı Ekle</a>
